{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es5",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "paths": {
      "@app/*": ["src/*"]
    },
    "removeComments": true, 
    "sourceMap": true,
    "useDefineForClassFields": true,
    "alwaysStrict": false,
    "allowJs": true,
    "noImplicitReturns": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false, 
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist", 
    "src/**/*.test.*",
    "src/**/*.spec.*"
  ]
}
